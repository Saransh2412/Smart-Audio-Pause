{
  "manifest_version": 3,
  "name": "Smart Video Pause",
  "version": "1.2.4",
  "description": "Automatically pause videos when tab is inactive â€” or control manually.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
